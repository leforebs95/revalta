{
    "family": "nivalta-preprod",
    "containerDefinitions": [
        {
            "name": "sveltekit-server",
            "image": null,
            "cpu": 256,
            "memory": 512,
            "portMappings": [],
            "essential": true,
            "environment": [],
            "mountPoints": [],
            "volumesFrom": [],
            "logConfiguration": {
              "logDriver": "awslogs",
              "options": {
                "awslogs-group": "/ecs/web_nginx",
                "awslogs-create-group": "true",
                "awslogs-region": "us-west-2",
                "awslogs-stream-prefix": "ecs"
              },
              "secretOptions": []
            },
            "healthCheck": {
              "command": [
                "CMD-SHELL",
                "curl -f http://localhost:8080 || exit 1"
              ],
              "interval": 30,
              "timeout": 5,
              "retries": 3,
              "startPeriod": 60
            },
            "systemControls": []
        },
        {
            "name": "flask-server",
            "image": null,
            "cpu": 256,
            "memory": 512,
            "portMappings": [],
            "essential": true,
            "environment": [],
            "mountPoints": [],
            "volumesFrom": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/web_nginx",
                    "awslogs-create-group": "true",
                    "awslogs-region": "us-west-2",
                    "awslogs-stream-prefix": "ecs"
                },
                "secretOptions": []
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:5000/api/version || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3
            },
            "systemControls": []
        },
        {
            "name": "nginx-proxy",
            "image": null,
            "cpu": 256,
            "memory": 512,
            "portMappings": [
              {
                "name": "nginx-80-tcp",
                "containerPort": 80,
                "hostPort": 80,
                "protocol": "tcp",
                "appProtocol": "http"
              }
            ],
            "essential": true,
            "environment": [
              {
                "name": "FLASK_HOST",
                "value": "localhost"
              },
              {
                "name": "SVELTE_HOST",
                "value": "localhost"
              }
            ],
            "mountPoints": [],
            "volumesFrom": [],
            "dependsOn": [
              {
                "containerName": "flask-server",
                "condition": "HEALTHY"
              },
              {
                "containerName": "sveltekit-server",
                "condition": "HEALTHY"
              }
            ],
            "logConfiguration": {
              "logDriver": "awslogs",
              "options": {
                "awslogs-group": "/ecs/web_nginx",
                "awslogs-create-group": "true",
                "awslogs-region": "us-west-2",
                "awslogs-stream-prefix": "ecs"
              },
              "secretOptions": []
            },
            "healthCheck": {
              "command": [
                "CMD-SHELL",
                "curl -f http://localhost:80 || exit 1"
              ],
              "interval": 30,
              "timeout": 5,
              "retries": 3
            },
            "systemControls": []
          }                    
    ],
    "taskRoleArn": "arn:aws:iam::975049886332:role/ecsTaskExecutionRole",
    "executionRoleArn": "arn:aws:iam::975049886332:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "3072",
    "runtimePlatform": {
        "cpuArchitecture": "ARM64",
        "operatingSystemFamily": "LINUX"
    }
}